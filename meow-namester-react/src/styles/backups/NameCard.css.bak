.name-card {
  composes: card-base;
  padding: var(--space-6);
  cursor: pointer;
  min-height: 200px;
  display: flex;
  flex-direction: column;
  gap: var(--space-4);
  position: relative;
  overflow: visible;
  transform-origin: center;
}

.name-card:before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 3px;
  background: linear-gradient(to right, var(--primary-color), var(--primary-dark));
  border-radius: var(--radius-xl) var(--radius-xl) 0 0;
  opacity: 0;
  transition: var(--transition-all);
}

.name-card:hover:before {
  opacity: 1;
}

.name-text {
  font-family: var(--font-serif);
  font-size: var(--text-3xl);
  color: var(--text-primary);
  margin: 0;
  text-align: center;
  line-height: 1.2;
  transition: var(--transition-all);
}

.name-description {
  position: absolute;
  left: var(--space-4);
  right: var(--space-4);
  bottom: var(--space-4);
  background: var(--card-background);
  padding: var(--space-4);
  border-radius: var(--radius-lg);
  font-size: var(--text-sm);
  line-height: 1.6;
  opacity: 0;
  transform: translateY(10px);
  transition: var(--transition-all);
  box-shadow: var(--shadow-lg);
  border: 1px solid var(--card-border);
  pointer-events: none;
  visibility: hidden;
}

.name-card:hover .name-description {
  opacity: 1;
  transform: translateY(0);
  pointer-events: auto;
  visibility: visible;
}

.check-mark {
  position: absolute;
  top: var(--space-4);
  right: var(--space-4);
  width: 24px;
  height: 24px;
  background: var(--primary-light);
  color: var(--primary-color);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transform: scale(0.8);
  transition: var(--transition-all);
}

.name-card.selected .check-mark {
  opacity: 1;
  transform: scale(1);
}

/* Small variant */
.name-card.small {
  min-height: 140px;
  padding: var(--space-4);
}

.name-card.small .name-text {
  font-size: var(--text-xl);
}

.name-card.small .name-description {
  font-size: var(--text-sm);
  padding: var(--space-3);
}

@media (max-width: 768px) {
  .name-card {
    padding: var(--space-4);
    min-height: 160px;
  }

  .name-text {
    font-size: var(--text-2xl);
  }

  .name-description {
    position: relative;
    opacity: 1;
    transform: none;
    visibility: visible;
    pointer-events: auto;
    margin-top: var(--space-4);
    left: 0;
    right: 0;
    bottom: 0;
  }
}

@media (prefers-color-scheme: dark) {
  .name-card:before {
    background: linear-gradient(to right, var(--primary-400), var(--primary-300));
  }

  .name-description {
    background: var(--card-background);
    border-color: var(--card-border);
  }

  .check-mark {
    background: rgba(96, 165, 250, 0.15);
    color: var(--primary-400);
  }
}

@media (prefers-reduced-motion: reduce) {
  .name-card:before,
  .name-description,
  .check-mark {
    transition: none;
  }
}
