{
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["app/components/*"],
      "@/lib/*": ["app/lib/*"],
      "@/styles/*": ["app/styles/*"],
      "@/config/*": ["app/config/*"],
      "@/types/*": ["app/lib/types/*"],
      "@/utils/*": ["app/lib/utils/*"],
      "@/hooks/*": ["app/lib/hooks/*"],
      "@/store/*": ["app/lib/store/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
